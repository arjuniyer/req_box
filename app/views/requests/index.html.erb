<h1>Listing requests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Req by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.name %></td>
    <td><%= request.created_at %></td>
    <td><%= request.req_by %></td>
    <td><%= request.likes%></td>
    <td><%= request.dislikes%></td>
    <td><%= request.dj_approved%></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

